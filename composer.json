{
    "name": "pronovix/monorepo-helper",
    "description": "Monorepo helper Composer plugin.",
    "type": "composer-plugin",
    "license": "GPL-2.0-or-later",
    "require": {
        "composer-plugin-api": "^1.1",
        "symfony/finder": "^3.4 || ^4.0",
        "vierbergenlars/php-semver": "^3.0",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "composer/composer": "1.7.3 as 1.8.0",
        "friendsofphp/php-cs-fixer": "^2.15",
        "vimeo/psalm": "^3.4"
    },
    "extra": {
        "class": "Pronovix\\MonorepoHelper\\Composer\\Plugin",
        "branch-alias": {
            "2.x": "2.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Pronovix\\MonorepoHelper\\": "src/"
        }
    },
    "scripts": {
        "analyze": "psalm --config=psalm.xml.dist --show-info=false --stats",
        "check-style": "php-cs-fixer fix --config=./.php_cs.dist --dry-run",
        "fix-style": "php-cs-fixer fix --config=./.php_cs.dist"
    }
}
